@model IEnumerable<VideoRentalApplication.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Customer List</h2>

@Html.ActionLink("New Movie", "MovieForm", "", new { @class = "btn btn-success" })

<br />
<br />


<div>
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Movie Category</th>
                <th>Release Date</th>
                <th>No Of Stock</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <p>No records founf</p>
            }
            else
            {
                foreach (var movie in Model)
                {
                    using (Html.BeginForm("Delete", "Movie", new { Id = movie.Id }))
                    {
                        <tr>
                            <td>@Html.ActionLink(@movie.Name, "Edit", new { id = movie.Id })</td>
                            <td>@movie.Genre.Name</td>
                            @*??  null coalescing operator*@
                            <td>@movie.ReleaseDate</td>
                            <td>@movie.NumberInStock</td>
                            @*<td>@Html.ActionLink("Delete", "Delete", new { id = customer.Id })</td>*@
                            <td><input type="submit" value="Delete" class="btn btn-link" onclick="return confirm('Are you sure, do you want to delete this record?')" /></td>
                        </tr>
                    }
                }
            }


        </tbody>
    </table>
</div>