@model VideoRentalApplication.ViewModel.MovieFormViewModel
@{
    ViewBag.Title = "New";
}

@if (Model.Movies.Id == 0)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

<div>
    @using (Html.BeginForm("Save", "Movie", FormMethod.Post))

    {
        @Html.AntiForgeryToken();
        @Html.HiddenFor(c => c.Movies.Id)

        <div class="from-group">
            @Html.LabelFor(c => c.Movies.Name)
            @Html.TextBoxFor(c => c.Movies.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.Movies.Name, null, new { @class = "text-danger" })
        </div>
        <div class="from-group">
            @Html.LabelFor(c => c.Movies.Genre)
            @Html.DropDownListFor(c => c.Movies.Genreid,
                new SelectList(Model.Genres, "Id", "Name"),
                "Please select Genre Type", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.Movies.Genreid, null, new { @class = "text-danger" })
        </div>
        <div class="from-group">
            @Html.LabelFor(c => c.Movies.AddedDate)
            @Html.EditorFor(c => c.Movies.AddedDate, new { htmlAttributes = new { @class = "datepicker" } })
            @Html.ValidationMessageFor(c => c.Movies.AddedDate, null, new { @class = "text-danger" })
        </div>
        <div class="from-group">
            @Html.LabelFor(c => c.Movies.ReleaseDate)
            @Html.EditorFor(c => c.Movies.ReleaseDate, new { htmlAttributes = new { @class = "datepicker" } })
            @Html.ValidationMessageFor(c => c.Movies.ReleaseDate, null, new { @class = "text-danger" })
        </div>
        <div class="from-group">
            @Html.LabelFor(c => c.Movies.NumberInStock)
            @Html.EditorFor(c => c.Movies.NumberInStock, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(c => c.Movies.NumberInStock, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-success" />
            @Html.ActionLink("Bank To List", "Index", "", new { @class = "btn btn-success" })
        </div>
    }
</div>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts{

    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd-mm-yy",
                changemonth: true,
                changeyear: true
            });
        });
    </script>
    @*@Scripts.Render("~/bundles/jquery")*@

}